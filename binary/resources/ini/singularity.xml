<?xml version="1.0" encoding="utf-8"?>

<!-- This is the starting element for all XdevL 0.x.y applications -->
<XdevLCoreProperties>

  <!-- Plug external plugins to the core system. -->
  <XdevLPlugins>
		<XdevLPlugin filename="XdevLWindowSDL-1.0.0"/>
		<XdevLPlugin filename="XdevLMouse-1.0.0"/>
		<XdevLPlugin filename="XdevLKeyboard-1.0.0"/>
		<XdevLPlugin filename="XdevLJoystick-1.0.0"/>		
    <XdevLPlugin filename="XdevLOpenGL-1.0.0"/>
  </XdevLPlugins>

  <!-- Create modules which are inside the plugins and give them identification codes. -->
	<XdevLModules>
    <XdevLModule id="MyWindow"   plugin_name="XdevLWindowSDL"   module_name="XdevLWindow"/>
    <XdevLModule id="MyMouse" 		plugin_name="XdevLMouse" module_name="XdevLMouse"/>		
    <XdevLModule id="MyKeyboard" plugin_name="XdevLKeyboard" module_name="XdevLKeyboard"/>
    <XdevLModule id="MyJoystick"   plugin_name="XdevLJoystick"   module_name="XdevLJoystick"/>
    <XdevLModule id="MyOpenGL"   plugin_name="XdevLOpenGL"   module_name="XdevLOpenGL"/>
  </XdevLModules>

  <!-- Setting some properties of the XdevLWindowDevice module. -->
  <XdevLWindow id="MyWindow">
    <Title> Singularity </Title>
    <Fullscreen> 0 </Fullscreen>
    <X> 0 </X>
    <Y> 0 </Y>
    <Width>1185 </Width>
    <Height> 700 </Height>
    <HidePointer>0</HidePointer>
		<Borderless>0</Borderless>
		<BackgroundColor>0 0 0 0 </BackgroundColor>		
  </XdevLWindow>


  <!-- Setting some properties of the XdevLOpenGL module. -->
  <XdevLOpenGL id="MyOpenGL"  profile="core"
                              major="3"
                              minor="3" 
                              framebuffer_depth="32" 
                              z_buffer_depth="24" 
                              stencil_buffer_depth="8"  
                              vsync="0" 
                              fsaa="0"> 
  </XdevLOpenGL>




	<XdevLMouseDevice id="MyMouse">
	</XdevLMouseDevice>

</XdevLCoreProperties>

